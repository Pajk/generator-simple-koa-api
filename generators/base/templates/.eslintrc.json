{
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "no-console": 0,
        "no-constant-condition": 0,
        "strict": ["error", "global"],
        "no-var": "error",
        "prefer-const": "error",
        "no-trailing-spaces": "error"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
