{
    "rules": {
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "indent": [
            2,
            2
        ],
        "no-console": 0,
		"no-constant-condition": 0
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
